generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Camping {
  id                   Int       @id @default(autoincrement())
  jetcampId            String?   @unique  // JetCamp external ID
  naam                 String
  slug                 String    @unique
  
  // Location
  land                 String    // Country slug (e.g., "nederland", "frankrijk")
  regio                String?   // Region/Province name
  stad                 String?   // City/Town name
  
  // Address
  straat               String?   // Street + house number
  postcode             String?
  latitude             Float?
  longitude            Float?
  
  // Contact
  telefoon             String?
  email                String?
  website              String?
  facebookUrl          String?
  instagramUrl         String?
  
  // Ratings (from JetCamp)
  rating               Float?    // Customer rating (1-10)
  aantalReviews        Int?      // Number of reviews
  sterren              Int?      // Official star rating (1-5)
  
  // Google Places (for enrichment)
  googlePlaceId        String?   @unique
  googleRating         Float?
  googleReviewCount    Int?
  
  // Content
  beschrijving         String?
  fotoUrl              String?   // Main photo
  fotoUrl480           String?   // 480px version
  fotoUrl1024          String?   // 1024px version
  fotoUrls             String[]  // Additional photos
  
  // Pricing
  prijsVanaf           Float?    // Price per night from (high season)
  valuta               String    @default("EUR")
  
  // Capacity
  aantalPlaatsen       Int?      // Total spots
  aantalStaanplaatsen  Int?      // Recreational pitches
  aantalHuuraccommodaties Int?   // Rental accommodations
  
  // Accommodation types (from JetCamp facility_subs)
  heeftStaanplaats     Boolean   @default(false)  // Camping pitch
  heeftStacaravan      Boolean   @default(false)  // Mobile home
  heeftChalet          Boolean   @default(false)  // Chalet/Bungalow
  heeftGlamping        Boolean   @default(false)  // Safari tent / glamping
  heeftTent            Boolean   @default(false)  // Furnished tent
  heeftCamperplaats    Boolean   @default(false)  // Camper pitch
  
  // Facilities
  heeftZwembad         Boolean   @default(false)
  heeftZwembadBuiten   Boolean   @default(false)
  heeftZwembadBinnen   Boolean   @default(false)
  heeftWifi            Boolean   @default(false)
  heeftRestaurant      Boolean   @default(false)
  heeftSupermarkt      Boolean   @default(false)
  heeftAnimatie        Boolean   @default(false)
  heeftHuisdieren      Boolean   @default(false)
  heeftSpeeltuin       Boolean   @default(false)
  heeftWasmachine      Boolean   @default(false)
  heeftFietsverhuur    Boolean   @default(false)
  heeftStrand          Boolean   @default(false)
  heeftStrandZee       Boolean   @default(false)
  heeftStrandMeer      Boolean   @default(false)
  heeftVisvijver       Boolean   @default(false)
  heeftWellness        Boolean   @default(false)
  heeftPriveSanitair   Boolean   @default(false)
  heeftGlijbaan        Boolean   @default(false)
  heeftWaterpark       Boolean   @default(false)
  
  // Camping types
  isNatuurcamping      Boolean   @default(false)
  isLuxeCamping        Boolean   @default(false)
  isFamiliecamping     Boolean   @default(false)
  isKindvriendelijk    Boolean   @default(false)
  isNudistencamping    Boolean   @default(false)
  isMiniCamping        Boolean   @default(false)
  isBoerderijcamping   Boolean   @default(false)
  isCamperspot         Boolean   @default(false)
  isVakantiepark       Boolean   @default(false)
  
  // External links
  jetcampUrl           String?   // Full JetCamp URL
  
  // Season
  seizoenStart         String?
  seizoenEinde         String?
  jaarRondOpen         Boolean   @default(false)
  
  // Meta
  metaTitle            String?
  metaDescription      String?
  
  // Status
  actief               Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  @@index([land])
  @@index([land, regio])
  @@index([actief])
  @@index([rating])
}

model Stad {
  id                   Int       @id @default(autoincrement())
  naam                 String
  slug                 String
  land                 String
  regio                String?
  provincie            String?
  
  latitude             Float?
  longitude            Float?
  
  aantalCampings       Int       @default(0)
  
  beschrijving         String?
  fotoUrl              String?
  
  metaTitle            String?
  metaDescription      String?
  
  actief               Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  @@unique([land, slug])
  @@index([land])
}

model Land {
  id                   Int       @id @default(autoincrement())
  naam                 String    @unique  // Display name (e.g., "Frankrijk")
  slug                 String    @unique  // URL slug (e.g., "frankrijk")
  naamEn               String?   // English name
  
  aantalCampings       Int       @default(0)
  aantalRegios         Int       @default(0)
  
  beschrijving         String?
  fotoUrl              String?
  vlagUrl              String?   // Flag image
  
  metaTitle            String?
  metaDescription      String?
  
  actief               Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Regio {
  id                   Int       @id @default(autoincrement())
  naam                 String
  slug                 String
  land                 String    // Country slug
  
  aantalCampings       Int       @default(0)
  
  beschrijving         String?
  fotoUrl              String?
  
  metaTitle            String?
  metaDescription      String?
  
  actief               Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  
  @@unique([land, slug])
  @@index([land])
}
